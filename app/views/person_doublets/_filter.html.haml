- id = type.to_s.pluralize
- caption = t("people_filters.#{type}.title")
- open_class = "in" if entry.filter_chain[type.to_sym].present?

.accordion-group
  .accordion-heading
    %a.accordion-toggle.collapsed.header{ href: "##{id}", data: { toggle: :collapse } }
      = caption

  .accordion-body.collapse{ id: id, class: open_class }
    .accordion-inner
      = yield
